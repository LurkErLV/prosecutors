<%- include('partials/header') -%>
<section class="blog-posts">
    <div class="container">
<div class="columns">
    <form action="/news/create" method="POST">
        <div class="column is-12 is-offset-1" id="border">
            <div class="columns featured-post is-multiline">
                <div class="column is-7 post">
                    <article class="columns featured">
                        <div class="column is-10 post-img ">
                            <p><b>Image Url:</b> <input required type="text" name="imgUrl"></p>
                        </div>
                        <div class="column is-12 featured-content va">
                            <div>
                                <h1 class="title post-title">Заголовок: <input required type="text" name="title"></h1>
                                <p class="subtitle is-6">Автор: <input required type="text" name="author"></p>
                                <p class="post-excerpt">Описание: <textarea required type="text" name="description"></textarea></p>
                                <br>
                                <p>Опубликовано : <input required type="date" name="date"></p>
                            </div>
                            <button class="button" type="submit">Подтвердить</button>
                        </div>
                    </article>
                </div>
            </form>
      </div>
    </div>
</section>
<%- include('partials/footer') -%>