<%- include('partials/header')  -%>
<div class="container box p-6 has-background-light">
    <h1 class="title has-text-centered">
        Blaine County Sheriff's Department
    </h1>
    <h2 class="subtitle has-text-centered">
        Settings
    </h2>
    <div>
        <div>
            <figure class="image is-128x128">
                <img class="is-rounded" src="https://cdn.discordapp.com/avatars/<%= user.discordId %>/<%= user.avatar %>">
            </figure>
        </div>
        <hr>
        <div class="">
            <div class="">
                <div class="">
                    <h4 class=""><%= user.username %>#<%= user.discriminator %></h4>
                </div>
            </div>
            <div class="">
                <p class="text-muted">Access Level: <b><%= user.level %></b></p>
                <p class="text-muted">Rank: <b><%= user.rank %></b></p>
                <p class="text-muted">Position: <b><%= user.position %></b></p>
                <p class="text-muted">Nickname: <b><%= user.nickname %></b></p>
                <p class="text-muted">Phone: <b><%= user.phone %></b></p>
            </div>
        </div>
    </div>
    <hr>
    <form action="/profile/settings" method="POST">
        <div class="field">
            <label class="label">Nickname</label>
            <div class="control">
                <input class="input" type="text"
                       placeholder="Enter your nickname"
                       name="nickname"
                />
            </div>
        </div>

        <div class="field">
            <label class="label">Phone</label>
            <div class="control">
                <input
                        class="input is-grouped"
                        type="text"
                        placeholder="Enter your phone number"
                        name="phone"
                />
            </div>
        </div>
        <div class="field is-grouped">
            <div class="control">
                <button type="submit" class="button is-success">
                    Save Change
                </button>
            </div>
            <div class="control">
                <a class="button is-link is-light" href="/profile">Cancel</a>
            </div>
        </div>
    </form>
</div>
<%- include('partials/footer')  -%>